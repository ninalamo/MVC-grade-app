<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_grade_app</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <!-- Bootstrap CSS without integrity attribute -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">



    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_grade_app.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evSXhkEGibvZDvtQPjT1QJturnT4vcQ79iMHz5v2IKVSmHGCvBrVWRn5D6i6vVC" crossorigin="anonymous">
    <style>
        /* Remove shadow below navbar */
        .navbar.border-bottom {
            border-bottom: none;
        }

        /* Style the sidebar */
        #sidebar-wrapper {
            background-color: #f8f9fa; /* Light gray background */
            border-right: 1px solid #e0e0e0; /* Thin border */
        }

        /* Double the padding of page-content-wrapper */
        #page-content-wrapper {
            padding: 2rem !important;
        }
    </style>
</head>
<body>
    <header>
        <div class="d-flex" id="wrapper">
            <div class="bg-light border-right" id="sidebar-wrapper">
                <div class="sidebar-heading">MVC_grade_app</div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action bg-light">Home</a>
                    <a asp-action="Index" asp-controller="Students" class="list-group-item list-group-item-action bg-light">Students</a>
                    <a asp-action="Index" asp-controller="Courses" class="list-group-item list-group-item-action bg-light">Courses</a>
                    <a asp-action="Index" asp-controller="Sections" class="list-group-item list-group-item-action bg-light">Sections</a>
                </div>
            </div>
            <div id="page-content-wrapper">
                <div class="container">
                    <ol class="breadcrumb mt-2">
                        <li class="breadcrumb-item">
                          
                            @(((ViewContext)this.ViewContext).RouteData.Values["controller"]?.ToString() ?? "")
                           
                        </li>
                        @* Dynamic crumb items based on controller and action *@
                        <li class="breadcrumb-item active">
                            @if (ViewData["Title"] != null)
                            {
                                @ViewData["Title"]
                            }
                            else
                            {
                                @(((ViewContext)this.ViewContext).RouteData.Values["action"]?.ToString() ?? "")
                            }
                        </li>
                        <li class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                           <partial name="_LoginPartial" />
                        </li>

                    </ol>
                    @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
                        <div class="container-fluid">
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </nav> *@
                </div>
                
                

                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </header>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MVC_grade_app - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
